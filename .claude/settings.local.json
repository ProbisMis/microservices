{
  "permissions": {
    "allow": [
      "Bash(mvn clean package:*)",
      "Bash(docker compose:*)",
      "Bash(timeout:*)",
      "Bash(findstr:*)",
      "Bash(curl:*)",
      "Bash(ping:*)",
      "Bash(powershell:*)",
      "Bash(docker exec:*)",
      "Bash(mvn test:*)",
      "Bash(mvn clean compile:*)",
      "Bash(dir:*)",
      "Bash(git add:*)",
      "Bash(git commit:*)",
      "Bash(mvn test-compile:*)",
      "Bash(bash scripts/ralph/ralph.sh:*)",
      "Bash(claude)",
      "mcp__ide__getDiagnostics",
      "Bash(mvn install:*)",
      "Bash(grep:*)",
      "Bash(find:*)"
    ]
  },
  "enabledMcpjsonServers": [
    "notion"
  ],
  "hooks": {
    "SessionStart": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "powershell -ExecutionPolicy Bypass -File .claude/hooks/session-start.ps1",
            "timeout": 60,
            "statusMessage": "Checking Docker services..."
          }
        ]
      }
    ]
  }
}
